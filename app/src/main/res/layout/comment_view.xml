<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/comment_writer_nickname"
            style="@style/UserName"
            android:layout_width="88dp"
            android:layout_height="22dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:includeFontPadding="false"
            android:textColor="@color/colorBlack"
            android:text="매운군만두" />

        <TextView
            android:id="@+id/comment_content"
            style="@style/InvalidName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:includeFontPadding="false"
            android:textColor="@color/colorBlack"
            android:text="이 시간에 올리기 있습니까?" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnLike"
            android:layout_width="11.6dp"
            android:layout_height="12dp"
            android:layout_gravity="center"
            android:layout_marginEnd="21.8dp"
            android:layout_marginRight="21.8dp"
            android:background="@drawable/icon_heart_24" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnReport"
            android:layout_width="77.2dp"
            android:layout_height="30dp"
            android:layout_marginStart="114dp"
            android:layout_marginLeft="114dp"
            android:background="@color/transparent"
            android:fontFamily="@font/noto_sans_cjkkr_demi_light"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:letterSpacing="-0.03"
            android:textColor="@color/colorBlack"
            android:textSize="11sp"
            android:textStyle="normal"
            android:text="@string/comment_report" />

        <Button
            android:id="@+id/btnAddComment"
            android:layout_width="77.2dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:background="@color/transparent"
            android:fontFamily="@font/noto_sans_cjkkr_demi_light"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:letterSpacing="-0.03"
            android:textColor="@color/colorBlack"
            android:textSize="11sp"
            android:textStyle="normal"
            android:text="@string/comment_re" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/like_count"
            style="@style/Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="23dp"
            android:layout_marginRight="23dp"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:textColor="@color/colorBlack"
            android:text="좋아요 2개" />


    </LinearLayout>


</LinearLayout>