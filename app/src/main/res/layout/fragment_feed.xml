    <ScrollView
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/feed_fragment_iv_title"
        android:layout_height="0dp"
        android:layout_marginTop="8dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/feed_fragment_rv"
            android:layout_width="match_parent"
            android:layout_gravity="top"
            android:layout_height="wrap_content"/>

    </ScrollView>

    <ScrollView
        android:id="@+id/feed_fragment_sv_animation"
        xmlns:android="http://schemas.android.com/apk/res/android"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/colorWhite"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:background="@color/colorWhite"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="1024dp">


            <ImageView
                android:id="@+id/feed_fragment_iv_red_circle"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/frame_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="29.3dp"
                android:layout_marginTop="48.01dp" />


            <ImageView
                android:id="@+id/feed_fragment_iv_yellow_circle"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/frame_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="74.65dp"
                android:layout_marginTop="418.2dp" />

            <ImageView
                android:id="@+id/feed_fragment_iv_green_circle"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/frame_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15.42dp"
                android:layout_marginTop="858.2dp" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>


