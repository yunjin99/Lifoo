<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <com.example.lifoo.src.xmlClass.RoundImageView
        android:id="@+id/alert_item_iv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="15dp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="fitXY"
        android:src="@drawable/frame_1"/>

    <TextView
        android:id="@+id/alert_item_tv_reaction_nick_name"
        android:layout_width="200dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="@id/alert_item_iv"
        app:layout_constraintBottom_toBottomOf="@id/alert_item_iv"
        app:layout_constraintLeft_toRightOf="@id/alert_item_iv"
        android:layout_marginLeft="25dp"
        android:textSize="13sp"
        android:fontFamily="@font/noto_sans_cjkkr"
        android:text="뜨거운 물만두님이 박수 리액션을 보냈습니다."
        android:textAppearance="@style/some_id"
        android:gravity="top" />



    <TextView
        android:id="@+id/alert_item_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/alert_item_iv"
        app:layout_constraintLeft_toLeftOf="@id/alert_item_tv_reaction_nick_name"
        android:fontFamily="@font/noto_sans_cjkkr_regular"
        android:text="1시간 전"
        android:textColor="@color/colorBlack"
        android:textSize="10sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>