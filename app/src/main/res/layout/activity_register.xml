<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="160dp"
        android:layout_height="146dp"
        android:layout_marginTop="102dp"
        android:layout_marginBottom="12dp"
        android:src="@drawable/logo"
        android:contentDescription="desc"/>

    <RelativeLayout
        android:layout_width="340dp"
        android:layout_height="148.3dp">

        <ImageView
            android:id="@+id/slotImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/group_30"
            android:contentDescription="desc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/firstLetter"
                android:layout_width="19dp"
                android:layout_height="29.2dp"
                android:layout_marginStart="42dp"
                android:layout_marginLeft="42dp"
                android:layout_marginTop="81.7dp"
                android:layout_marginBottom="37.4dp"
                android:fontFamily="@font/noto_sans_cjkkr_medi"
                android:includeFontPadding="false"
                android:textSize="20sp"
                android:textColor="@color/colorBlack"
                android:letterSpacing="-0.02"
                android:gravity="center_horizontal"
                android:text=" " />

            <TextView
                android:id="@+id/secondLetter"
                android:layout_width="19dp"
                android:layout_height="29.2dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="81.7dp"
                android:layout_marginBottom="37.4dp"
                android:fontFamily="@font/noto_sans_cjkkr_medi"
                android:includeFontPadding="false"
                android:textSize="20sp"
                android:textColor="@color/colorBlack"
                android:letterSpacing="-0.02"
                android:gravity="center_horizontal"
                android:text=" " />

            <TextView
                android:id="@+id/thirdLetter"
                android:layout_width="19dp"
                android:layout_height="29.2dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="81.7dp"
                android:layout_marginBottom="37.4dp"
                android:fontFamily="@font/noto_sans_cjkkr_medi"
                android:includeFontPadding="false"
                android:textSize="20sp"
                android:textColor="@color/colorBlack"
                android:letterSpacing="-0.02"
                android:gravity="center_horizontal"
                android:text=" " />

            <TextView
                android:id="@+id/fourthLetter"
                android:layout_width="19dp"
                android:layout_height="29.2dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="81.7dp"
                android:layout_marginBottom="37.4dp"
                android:fontFamily="@font/noto_sans_cjkkr_medi"
                android:includeFontPadding="false"
                android:textSize="20sp"
                android:textColor="@color/colorBlack"
                android:letterSpacing="-0.02"
                android:gravity="center_horizontal"
                android:text=" " />

            <TextView
                android:id="@+id/fifthLetter"
                android:layout_width="19dp"
                android:layout_height="29.2dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="81.7dp"
                android:layout_marginBottom="37.4dp"
                android:fontFamily="@font/noto_sans_cjkkr_medi"
                android:includeFontPadding="false"
                android:textSize="20sp"
                android:textColor="@color/colorBlack"
                android:letterSpacing="-0.02"
                android:gravity="center_horizontal"
                android:text=" " />

            <TextView
                android:id="@+id/sixthLetter"
                android:layout_width="19dp"
                android:layout_height="29.2dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="81.7dp"
                android:layout_marginBottom="37.4dp"
                android:fontFamily="@font/noto_sans_cjkkr_medi"
                android:includeFontPadding="false"
                android:textSize="20sp"
                android:textColor="@color/colorBlack"
                android:letterSpacing="-0.02"
                android:gravity="center_horizontal"
                android:text=" " />
        </LinearLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/btnDraw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="41.7dp"
        android:background="@drawable/btn_login"
        android:contentDescription="desc"/>

    <TextView
        style="@style/Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="닉네임은 랜덤으로 설정됩니다.\n
닉네임 뽑기를 눌러주세요!"
        android:textColor="@color/colorBlack"
        app:lineHeight="20sp" />

</LinearLayout>